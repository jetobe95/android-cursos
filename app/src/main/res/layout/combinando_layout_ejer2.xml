<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <GridLayout
        android:columnCount="2"
        android:rowCount="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:useDefaultMargins="true"
        >


    <ImageButton
        android:id="@+id/llave"
        android:layout_width="@dimen/buttonImage"
        android:layout_height="@dimen/buttonImage"
        android:src="@drawable/pato"
        android:padding="10dp"
        android:scaleType="centerCrop" />

    <ImageButton
        android:id="@+id/tuerca"
        android:layout_width="@dimen/buttonImage"
        android:layout_height="@dimen/buttonImage"
        android:src="@drawable/cafe1"
        android:padding="10dp"
        android:scaleType="centerCrop" />

    <ImageButton
        android:id="@+id/buscador"
        android:layout_width="@dimen/buttonImage"
        android:layout_height="@dimen/buttonImage"
        android:src="@drawable/pez"
        android:padding="10dp"
        android:scaleType="centerCrop" />


    <ImageButton
        android:id="@+id/usuario"
        android:layout_width="@dimen/buttonImage"
        android:layout_height="@dimen/buttonImage"
        android:src="@drawable/leon"
        android:padding="10dp"
        android:scaleType="centerCrop" />


    </GridLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Ayuda" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Salir" />

    </LinearLayout>
</RelativeLayout>